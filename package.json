{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "Starter kit for webpack",
  "main": "index.js",
  "author": "Joseph Jung",
  "license": "ISC",
  "scripts": {
    "start": "npm run develop",
    "test": "cd build && karma start",
    "clean": "./build/scripts/clean.sh",
    "lint": "jshint --exclude node_modules,dist .",
    "build-dev": "npm run lint && npm run clean && ./build/scripts/copy.sh && webpack --config ./build/webpack.dev.js",
    "build-prod": "npm run lint && npm run clean && ./build/scripts/copy.sh && webpack --config ./build/webpack.prod.js",
    "develop": "npm run lint && webpack-dev-server --colors --no-info --config ./build/webpack.dev.js --port 8883 & sleep 1 && open -a \"Google Chrome\" http://localhost:8883/src/public/ & wait"
  },
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.22.0",
    "domready": "^1.0.8",
    "extract-text-webpack-plugin": "^0.9.1",
    "html-webpack-plugin": "^1.7.0",
    "jasmine-core": "2.3.4",
    "jasmine-react-helpers": "^0.2.2",
    "jshint": "^2.9.1",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "0.2.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "0.3.6",
    "karma-safari-launcher": "^0.1.1",
    "karma-webpack": "1.7.0",
    "node-bourbon": "^4.2.3",
    "node-sass": "^3.4.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "sass-loader": "^3.1.2",
    "style-loader": "0.13.0",
    "underscore": "^1.8.3",
    "webpack": "1.12.6",
    "webpack-config": "^3.1.0",
    "webpack-dev-server": "1.11.0"
  }
}
